<?xml version='1.0' encoding='utf-8'?>
<widget id="io.easyway.expense.manager" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Easy Expense</name>
    <description>
        Easy expense manager by easyway.io
    </description>
    <author email="akashgods@gmail.com" href="http://easyway.io">
        Easyway.io team
    </author>
    <preference name="ShowSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <icon src="icon.png" />
    <splash src="splash.png" />
    <preference name="KeyboardResize" value="false" />
    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon platform="android" qualifier="ldpi" src="res/icon/android/ldpi.png" />
        <icon platform="android" qualifier="mdpi" src="res/icon/android/mdpi.png" />
        <icon platform="android" qualifier="hdpi" src="res/icon/android/hdpi.png" />
        <icon platform="android" qualifier="xhdpi" src="res/icon/android/xhdpi.png" />
        <icon platform="android" qualifier="xxhdpi" src="res/icon/android/xxhdpi.png" />
        <icon platform="android" qualifier="xxxhdpi" src="res/icon/android/xxxhdpi.png" />
        <icon platform="android" qualifier="fr-xxhdpi" src="res/icon/android/fr-xxhdpi.png" />
        <splash platform="android" qualifier="ldpi" src="res/splash/android/ldpi.png" />
        <splash platform="android" qualifier="mdpi" src="res/splash/android/mdpi.png" />
        <splash platform="android" qualifier="hdpi" src="res/splash/android/hdpi.png" />
        <splash platform="android" qualifier="xhdpi" src="res/splash/android/xhdpi.png" />
        <splash platform="android" qualifier="fr-xhdpi" src="res/splash/android/fr-xhdpi.png" />
        <splash platform="android" qualifier="port-xxhdpi" src="res/splash/android/portrait-xxhdpi.png" />
        <splash platform="android" qualifier="land-xxhdpi" src="res/splash/android/landscape-xxhdpi.png" />
        <splash platform="android" qualifier="xxxhdpi" src="res/splash/android/xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-sqlite-storage" spec="^2.2.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.0.5" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-vibration" spec="^3.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.1" />
    <engine name="android" spec="^7.0.0" />
    <engine name="browser" spec="^5.0.3" />
</widget>
